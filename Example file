-- Load the Lume Library V2 using the loadstring
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/ItzzAvi535/Lume-Library-V2/refs/heads/main/Library", true))()

-- Create the UI with a custom title
local ui = library:CreateUI("My Custom UI")

-- Create a "Main" tab
local mainTab = ui:CreateTab("Main")

-- Add a button
mainTab:AddButton("Teleport Player", function()
    print("Teleporting player!")
end)

-- Add a toggle
mainTab:AddToggle("God Mode", function(state)
    print("God Mode: " .. (state and "Enabled" or "Disabled"))
end)

-- Add a slider
mainTab:AddSlider(1, 100, 50, function(value)
    print("Walk Speed: " .. value)
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
end)

-- Add a textbox
mainTab:AddTextbox("Enter Message...", function(input)
    print("Message: " .. input)
    ui:Notify("You entered: " .. input, 3)
end)

-- Add a keybind
mainTab:AddKeybind("Jump Key", function(key)
    print("Jump key set or pressed: " .. key.Name)
    if key then
        game.Players.LocalPlayer.Character.Humanoid.Jump = true
    end
end)

-- Add a dropdown
mainTab:AddDropdown({"Red", "Blue", "Green"}, function(selected)
    print("Selected color: " .. selected)
end)

ui:Notify("Welcome to My Custom UI! Press RightShift to toggle visibility.", 5)
