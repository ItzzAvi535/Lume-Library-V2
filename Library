local library = {}

-- Initialize the window creation function
function library:AddWindow(title, options)
    -- Create the main window
    local window = Instance.new("Frame")
    window.Name = title
    window.Size = UDim2.new(0, options.min_size.X, 0, options.min_size.Y)
    window.Position = UDim2.new(0.5, -options.min_size.X/2, 0.5, -options.min_size.Y/2) -- Center window
    window.BackgroundColor3 = options.main_color
    window.BorderSizePixel = 0
    window.Parent = game.Players.LocalPlayer.PlayerGui

    -- Create a title bar
    local titleBar = Instance.new("TextLabel")
    titleBar.Size = UDim2.new(1, 0, 0, 50)
    titleBar.BackgroundColor3 = options.main_color
    titleBar.Text = title
    titleBar.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleBar.Font = Enum.Font.Gotham
    titleBar.TextSize = 24
    titleBar.TextXAlignment = Enum.TextXAlignment.Center
    titleBar.TextYAlignment = Enum.TextYAlignment.Center
    titleBar.Parent = window

    -- Tabs container
    local tabsContainer = Instance.new("Frame")
    tabsContainer.Size = UDim2.new(1, 0, 0, 50)
    tabsContainer.Position = UDim2.new(0, 0, 0, 50)
    tabsContainer.BackgroundTransparency = 0.2
    tabsContainer.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    tabsContainer.BorderSizePixel = 0
    tabsContainer.Parent = window

    -- Add a separator line below the tabs
    local separator = Instance.new("Frame")
    separator.Size = UDim2.new(1, 0, 0, 1)
    separator.Position = UDim2.new(0, 0, 1, 0)
    separator.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    separator.BorderSizePixel = 0
    separator.Parent = tabsContainer

    return window
end

-- Function to create tabs
function library:AddTab(window, tabName)
    local tab = Instance.new("TextButton")
    tab.Size = UDim2.new(0, 100, 1, 0)
    tab.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    tab.Text = tabName
    tab.TextColor3 = Color3.fromRGB(255, 255, 255)
    tab.Font = Enum.Font.Gotham
    tab.TextSize = 18
    tab.Parent = window:FindFirstChild("TabsContainer")

    -- Return tab button for further customization
    return tab
end

-- Function to add buttons to a tab
function library:AddButton(tab, buttonName, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 200, 0, 50)
    button.Position = UDim2.new(0, 50, 0, 100)
    button.BackgroundColor3 = Color3.fromRGB(0, 0, 255)
    button.Text = buttonName
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.Gotham
    button.TextSize = 18
    button.TextXAlignment = Enum.TextXAlignment.Center
    button.TextYAlignment = Enum.TextYAlignment.Center
    button.Parent = tab.Parent

    button.MouseButton1Click:Connect(callback)
end

return library
