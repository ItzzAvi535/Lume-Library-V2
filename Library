local library = {}

local ui_options = {
    main_color = Color3.fromRGB(255, 0, 0),
    min_size = UDim2.new(0, 600, 0, 350),
    background_color = Color3.fromRGB(0, 0, 0),
    font = Enum.Font.Gotham,
}

-- Create main window
local Window = Instance.new("ImageLabel")
Window.Name = "Window"
Window.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
Window.Size = ui_options.min_size
Window.Position = UDim2.new(0.5, -300, 0.5, -175)
Window.BackgroundColor3 = ui_options.background_color
Window.BorderSizePixel = 0
Window.Image = "rbxassetid://6176266590"
Window.AnchorPoint = Vector2.new(0.5, 0.5)

-- Create title bar
local Title = Instance.new("TextLabel")
Title.Name = "Title"
Title.Parent = Window
Title.Size = UDim2.new(1, 0, 0, 50)
Title.BackgroundColor3 = ui_options.main_color
Title.Text = "Lume Library"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = ui_options.font
Title.TextSize = 24
Title.TextXAlignment = Enum.TextXAlignment.Center
Title.TextYAlignment = Enum.TextYAlignment.Center

-- Create tabs container
local TabsContainer = Instance.new("Frame")
TabsContainer.Name = "TabsContainer"
TabsContainer.Parent = Window
TabsContainer.Size = UDim2.new(1, 0, 0, 50)
TabsContainer.Position = UDim2.new(0, 0, 0, 50)
TabsContainer.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
TabsContainer.BackgroundTransparency = 0.2
TabsContainer.BorderSizePixel = 0

-- Add separator line below the tabs
local separator = Instance.new("Frame")
separator.Parent = TabsContainer
separator.Size = UDim2.new(1, 0, 0, 1)
separator.Position = UDim2.new(0, 0, 1, 0)
separator.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
separator.BorderSizePixel = 0

-- Create content area below tabs
local ContentFrame = Instance.new("Frame")
ContentFrame.Name = "ContentFrame"
ContentFrame.Parent = Window
ContentFrame.Position = UDim2.new(0, 0, 0, 100)
ContentFrame.Size = UDim2.new(1, 0, 1, -100)
ContentFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
ContentFrame.BackgroundTransparency = 0.3
ContentFrame.BorderSizePixel = 0

-- Tabs and content storage
local tabs = {}

-- Function to create a tab and its content
local function createTab(name, contentText)
    local tabButton = Instance.new("TextButton")
    tabButton.Name = name
    tabButton.Parent = TabsContainer
    tabButton.Size = UDim2.new(0, 100, 1, 0)
    tabButton.BackgroundColor3 = ui_options.main_color
    tabButton.Text = name
    tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    tabButton.Font = ui_options.font
    tabButton.TextSize = 18
    tabButton.TextXAlignment = Enum.TextXAlignment.Center
    tabButton.TextYAlignment = Enum.TextYAlignment.Center

    local content = Instance.new("Frame")
    content.Name = name .. "_Content"
    content.Parent = ContentFrame
    content.Size = UDim2.new(1, 0, 1, 0)
    content.BackgroundTransparency = 1
    content.Visible = false

    local label = Instance.new("TextLabel")
    label.Parent = content
    label.Size = UDim2.new(1, -20, 0, 30)
    label.Position = UDim2.new(0, 10, 0, 10)
    label.Text = contentText
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = ui_options.font
    label.TextSize = 20
    label.BackgroundTransparency = 1
    label.TextXAlignment = Enum.TextXAlignment.Left

    tabs[name] = content

    tabButton.MouseButton1Click:Connect(function()
        for tabName, tabContent in pairs(tabs) do
            tabContent.Visible = false
        end
        content.Visible = true
    end)
end

-- Create sample tabs
createTab("Home", "Welcome to the Home tab!")
createTab("Settings", "Here are your settings.")
createTab("About", "About this library...")

-- Function to add a button (inside a tab or manually)
function library:AddButton(text, callback)
    local button = Instance.new("TextButton")
    button.Parent = ContentFrame
    button.Size = UDim2.new(0, 200, 0, 50)
    button.Position = UDim2.new(0, 50, 0, 60)
    button.BackgroundColor3 = ui_options.main_color
    button.Text = text
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = ui_options.font
    button.TextSize = 18
    button.TextXAlignment = Enum.TextXAlignment.Center
    button.TextYAlignment = Enum.TextYAlignment.Center

    button.MouseButton1Click:Connect(callback)
end

-- Default to Home tab on start
for _, frame in pairs(tabs) do frame.Visible = false end
if tabs["Home"] then tabs["Home"].Visible = true end

return library
